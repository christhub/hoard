<div class="new-hoard">
  {{#if addNewHoard}}
    <h3><a {{action 'hoardFormControlDown'}}><i class="fa fa-chevron-down"></i></a></h3>
    <div>
     <form>
       <div class="form-group">
         <label for="name">name</label>
         {{input value=name id="name"}}
       </div>

       <div class="form-group">
         <label for="question">question</label>
         {{input value=question id="question"}}
       </div>

       <div class="form-group">
         <label for="image">answer</label>
         {{input value=answer id="answer"}}
       </div>

       <button {{action 'save1'}}>Save</button>
     </form>
    </div>
   {{else}}
    <h3><a {{action 'hoardFormControlPlus'}}><i class="fa fa-plus"></i></a></h3>
  {{/if}}
</div>
