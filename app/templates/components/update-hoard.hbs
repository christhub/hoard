<span class="updateHoard">
  {{#if updateHoard}}
    <a {{action 'hoardFormControlDown'}}><i class="fa fa-chevron-down"></i></a>
    <form>
      <div class="form-group">
        <label for="name">name</label>
        {{input value=name id="name" placeholder=hoard.name}}
      </div>

      <div class="form-group">
        <label for="question">question</label>
        {{input value=question id="question" placeholder=hoard.question}}
      </div>

      <div class="form-group">
        <label for="answer">answer</label>
        {{input value=answer id="answer" placeholder=hoard.answer}}
      </div>

      <button {{action 'update' hoard}}>save</button>
    </form>
  {{else}}
    <a {{action 'hoardFormControlPlus'}}><i class="fa fa-plus"></i></a>
  {{/if}}
</span>
