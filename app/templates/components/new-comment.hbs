<div class="new-hoard">
  {{#if addNewComment}}
    <h3><a {{action 'hoardFormControlDown'}}><i class="fa fa-chevron-down"></i></a></h3>
    <div>
     <form id="new-comment">
       <div class="form-group">
         <label for="title">title</label>
         {{input value=title id="title" autocomplete="off"}}
       </div>

       <div class="form-group">
         <label for="text">text</label>
         {{input value=text id="text" placeholder="type comment here..." autocomplete="off"}}
       </div>

       <a {{action 'saveComment'}}><i class="fa fa-thumbs-up"></i></a>
     </form>
    </div>
   {{else}}
    <h3><a {{action 'hoardFormControlPlus'}}><i class="fa fa-plus"></i></a></h3>
  {{/if}}
</div>
